<div class="container pt-4">

  <h1><%= @place["name"] %></h1>

  <p>
      <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
  </p>

  
  <div class="row">
    
    <% if @current_user%>
      <% for post in @posts %>
        <div class="col-md-4">
          <h4><%= post["title"] %></h4>
          <p><%= post["posted_on"] %></p>
         <!-- <img src="<%= post["image"] %>" class="img-fluid">
          <p><%= post["body"] %></p> -->
          <p><%= post["description"] %></p>
        </div>
      <% end %>

      
    <%else%>
      Login to see posts

    <%end%>
  </div>

</div>