<div class="container pt-4">

  <div class="pb-4">
    <h1>New User Account</h1>
  </div>

  <%= form_with :model => @user do |form| %>
    <p>
      <%= form.label "username" %>
      <%= form.text_field "username" %>
    </p>
    <p>
      <%= form.label "email" %>
      <%= form.text_field "email" %>
    </p>
    <p>
      <%= form.label "password" %>
      <%= form.password_field "password" %>
    </p>
    <p>
      <%= form.submit "Sign Up" , class:"btn btn-primary" %> 
    </p>
  <% end %>

</div>